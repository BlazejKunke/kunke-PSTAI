---
export interface Props {
  lang: 'en' | 'pl';
}
const { lang } = Astro.props;

const content = {
  pl: {
    title: 'Podnosimy standardy szkolenia AI w Polsce.',
    subtitle: 'Dołącz do wiodącego polskiego stowarzyszenia trenerów AI, które stawia na doskonałość, społeczność i rozwój zawodowy.',
    join_button: 'Dołącz do nas',
    contact_button: 'Skontaktuj się',
  },
  en: {
    title: 'Raising the standards of AI training in Poland.',
    subtitle: 'Join the leading Polish association of AI trainers that focuses on excellence, community, and professional development.',
    join_button: 'Join Us',
    contact_button: 'Contact Us',
  }
};

const t = content[lang];
---

<section class="py-20 lg:py-32 bg-gradient-to-br from-white to-mint/30">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-hero lg:text-6xl font-bold text-text mb-6 max-w-4xl mx-auto leading-tight">
      {t.title}
    </h1>
    
    <p class="text-xl lg:text-2xl text-gray-700 mb-12 max-w-2xl mx-auto">
      {t.subtitle}
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a 
        href="#join" 
        class="bg-primary text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary/90 transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 scroll-smooth"
      >
        {t.join_button}
      </a>
      <a 
        href="#contact" 
        class="border-2 border-primary text-primary px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 scroll-smooth"
      >
        {t.contact_button}
      </a>
    </div>
  </div>
</section>